<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.android.howtopage.HowToActivity" >

    <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="7dip"
        android:scrollbarStyle="insideInset"
        android:scrollbarTrackHorizontal="@drawable/scrollbar_track"
        android:scrollbarThumbHorizontal="@drawable/scrollbar_thumb"
        android:background="#ffed90"
        android:id="@+id/howToDispHorizontalScrollView1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:fillViewport="true"
    		android:id="@+id/howToDispLinearLayout1" >
        </LinearLayout>
        
    </HorizontalScrollView>

</LinearLayout>
